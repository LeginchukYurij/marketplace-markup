include ../../components/breadcrumbs/breadcrumbs
include ../../components/btn/btn
include ../../components/nice-select/nice-select
include ../../components/checkbox/checkbox
include ../../components/range-slider/range-slider
include ../../components/sto-card/sto-card-primery
include ../../components/sto-card/sto-card

.catalog-grid 
  aside.catalog-sidebar
    .catalog-sidebar__head 
      strong Фильтр

      button(type="button").close-filter
        <svg xmlns="http://www.w3.org/2000/svg" width="15" height="14" viewBox="0 0 15 14" fill="none">
          <path d="M13.915 1L1.91504 13M1.91504 1L13.915 13" stroke="#23262F" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>

    form(action="#" name="catalog-filter").catalog-filter-form

      .catalog-sidebar__box 
        strong.catalog-sidebar__box-title Стоимость, тг
        
        +range

      .catalog-sidebar__box 
        label(for="marka").catalog-sidebar__box-title Марка 
        +nice-select2("", "marka")
          option(value="#") Не выбрано
          option(value="#") Option 1
          option(value="#") Option 2
          option(value="#") Option 3
          option(value="#") Option 4

        small.catalog-sidebar__box-ex Например, Toyota

      .catalog-sidebar__box 
        label(for="district").catalog-sidebar__box-title Район
        +nice-select2("", "district")
          option(value="#") Алматинский
          option(value="#") Option 1
          option(value="#") Option 2
          option(value="#") Option 3
          option(value="#") Option 4

        small.catalog-sidebar__box-ex Например, Алматинский

      .catalog-sidebar__box 
        strong.catalog-sidebar__box-title.mb Дополнительно
        
        +checkbox('checkbox', 'n1', 'n1', "", 'Только круглосуточные', false, "")
        +checkbox('checkbox', 'n2', 'n2', "", 'Выбранный параметр', true, "")

      .catalog-sidebar__box 
        strong.catalog-sidebar__box-title.mb Радио
        
        +radio('radio', 'n3', 'n3', "", 'Только круглосуточные', false, "")
        +radio('radio', 'n3', 'n4', "", 'Выбранный параметр', true, "")



  .catalog-content
    .catalog-content__head
      +breadcrumbs
        li 
          a(href="/") Главная
        li 
          span  СТО

      
      button.show-on-map
        .btn-inner.btn-inner--map 
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="17" viewBox="0 0 18 17" fill="none">
            <path d="M5.96255 12.6643L1 15.5V4.15703L5.96255 1.32129M5.96255 12.6643L11.634 15.5M5.96255 12.6643V1.32129M11.634 15.5L16.5966 12.6643V1.32129L11.634 4.15703M11.634 15.5V4.15703M11.634 4.15703L5.96255 1.32129" stroke="#007879" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          span <b>Показать</b> на карте

        .btn-inner.btn-inner--list
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="14" viewBox="0 0 20 14" fill="none">
            <path d="M5.83887 1.05042H18.8389M5.83887 7.05042H18.8389M5.83887 13.0504H18.8389M0.838867 1.05042H0.848867M0.838867 7.05042H0.848867M0.838867 13.0504H0.848867" stroke="#007879" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
